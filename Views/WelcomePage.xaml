<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Veterinenis.Views.WelcomePage"
             Title="WelcomePage" BackgroundColor="#E4DFDA">
    <Grid>

        <StackLayout VerticalOptions="Start" HorizontalOptions="Center">
            <Image Source="logovetnegro.png"
               WidthRequest="250"
               HeightRequest="150"
               Margin="0,30,0,30"
               />
            <Label Text="Bienvenido"
                   HorizontalOptions="Center"
           FontSize="40"
           TextColor="#000000"
           FontAttributes="Bold"
           Padding="10"/>
            <Label Text="Juan Perez"
                    HorizontalOptions="Center"
            FontSize="25"
            TextColor="#000000"
            Padding="3"/>
            <Label Text="Tienes permiso de Veterinario"
                    HorizontalOptions="Center"
            FontSize="15"
            TextColor="#000000"
            Padding="3"/>

            <Image Source="welcome_dog.png"
                   WidthRequest="300"
                   HeightRequest="200"
                   Margin="0,30,0,30"
                   HorizontalOptions="Center" />
        </StackLayout>
    </Grid>
</ContentPage>